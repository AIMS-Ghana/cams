{% for d in site.days %}
    {% if d.title == page.title %}
        {% unless forloop.first %}
            <a href="{% include url.lq %}{{ prev.url }}" class="prev">{{ prev.title }}</a>
        {% endunless %}
        {% unless forloop.last %}
            {% assign next = site.days[forloop.index] %}
            <a href="{% include url.lq %}{{ next.url }}" class="next">{{ next.title }}</a>
        {% endunless %}

    {% endif %}
    {% assign prev = d %}
{% endfor %}
